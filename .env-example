# --- Azure OpenAI Configuration (.env file) ---

# For SQL Generation (GPT-4o)
azureOpenAIEndpoint="YOUR_GPT4O_ENDPOINT"
azureOpenAIApiKey="YOUR_GPT4O_KEY"
azureOpenAIApiDeploymentName="YOUR_GPT4O_DEPLOYMENT_NAME" # e.g., 'gpt-4o-deployment'
azureOpenAIApiVersion="2024-08-01-preview"

# For Vector Embeddings (text-embedding-ada-002)
OPENAI_EMBEDDING_RESOURCE="YOUR_EMBEDDING_RESOURCE_NAME"
OPENAI_EMBEDDING_API_KEY="YOUR_EMBEDDING_KEY"
OPENAI_EMBEDDING_MODEL="YOUR_EMBEDDING_DEPLOYMENT_NAME" # e.g., 'text-embedding-ada-002'
OPENAI_EMBEDDING_VERSION="2024-02-01"

VECTOR_DB_TYPE="chromadb"

# --- ChromaDB Configuration ---
CHROMA_PERSIST_DIRECTORY="./chroma_db"  # Local directory for ChromaDB storage
CHROMA_COLLECTION_PREFIX="data_source"   # Prefix for collection names